<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorOnSecondary">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/solnechnaya_sistema_1">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/question"
            style="@style/text_style_on_main_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="@string/question_1"
            android:textAllCaps="true">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/answer_1"
                style="@style/ButtonStyle"
                android:text="@string/question_1_answer_1">

            </Button>

            <Button
                android:id="@+id/answer_2"
                style="@style/ButtonStyle"
                android:text="@string/question_1_answer_2">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/answer_3"
                style="@style/ButtonStyle"
                android:text="@string/question_1_answer_3">

            </Button>

            <Button
                android:id="@+id/answer_4"
                style="@style/ButtonStyle"
                android:text="@string/question_1_answer_4">

            </Button>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>