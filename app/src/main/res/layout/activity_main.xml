<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorOnSecondary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center">

        <ImageView
            style="@style/main_image"
            android:id="@+id/main_button"
            android:src="@drawable/main_screen"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="?attr/colorPrimary">

        <TextView
            style="@style/text_style_on_main_screen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/main_screen_text1">
        </TextView>

        <TextView
            style="@style/text_style_on_main_screen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/main_screen_text2">
        </TextView>

        <TextView
            style="@style/text_style_on_main_screen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/main_screen_text3">
        </TextView>
    </LinearLayout>
</FrameLayout>
