<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/transition_drawable_incorrect</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:stateListAnimator">@animator/animator</item>
    </style>


    <style name="text_style_on_main_screen1">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text_style_on_main_screen2">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="main_image">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_above">@id/main_text</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="question" parent="text_style_on_main_screen1">
        <item name="android:layout_margin">25dp</item>
    </style>


    <style name="main_text_container">
        <item name="android:padding">10dp</item>
    </style>

</resources>